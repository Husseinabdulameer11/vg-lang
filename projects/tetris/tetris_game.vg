function showHighScores() {
    var highScoresWindow = window.create("Tetris - High Scores", 400, 500);
    window.setBackgroundColor(highScoresWindow, "#000000");
    
    ## Create a title label
    var titleLabel = Label.createLabel("Top Scores", 100, 20, 200, 30);
    Label.setLabelTextColor(titleLabel, "#FFFFFF");
    window.addComponentToWindow(highScoresWindow, titleLabel);
    
    var scoreData = "";
    try {
        ## Read high score data from file
        scoreData = File.readFile(highScoreFilePath);
    } catch (e) {
        ## If file doesn't exist, show message
        var noScoresLabel = Label.createLabel("No high scores yet!", 100, 60, 200, 30);
        Label.setLabelTextColor(noScoresLabel, "#FFFFFF");
        window.addComponentToWindow(highScoresWindow, noScoresLabel);
        
        ## Add back button
        var backButton = Button.createButton("Back", 150, 400, 100, 40);
        Button.setButtonColor(backButton, "#FFFFFF");
        IOEvents.setOnClick(backButton, &closeHighScoresWindow(highScoresWindow));
        window.addComponentToWindow(highScoresWindow, backButton);
        
        window.launch(highScoresWindow);
        return;
    }
    
    ## Split the file content into lines
    var lines = splitByNewline(scoreData);
    var entries = [];
    
    ## Skip the header line (first line)
    for (var i = 1; i < array.getLength(lines); i = i + 1) {
        if (lines[i] != "") {
            var entry = parseScoreLine(lines[i]);
            if (array.getLength(entry) >= 3) {
                array.push(entries, entry);
            }
        }
    }
    
    ## Sort entries by score (descending)
    for (var i = 0; i < array.getLength(entries); i = i + 1) {
        for (var j = i + 1; j < array.getLength(entries); j = j + 1) {
            if (Integer.toInt(entries[j][1]) > Integer.toInt(entries[i][1])) {
                var temp = entries[i];
                entries[i] = entries[j];
                entries[j] = temp;
            }
        }
    }
    
    ## Display the top scores (up to 10)
    var maxToShow = arithmetic.min(10, array.getLength(entries));
    var yPos = 60;
    
    ## Define column positions
    var rankX = 50;    ## Position for rank column
    var nameX = 100;   ## Position for player name column
    var scoreX = 220;  ## Position for score column
    var levelX = 300;  ## Position for level column
    
    ## Add header row
    var rankHeader = Label.createLabel("Rank", rankX, yPos, 50, 30);
    Label.setLabelTextColor(rankHeader, "#FFFF00");
    window.addComponentToWindow(highScoresWindow, rankHeader);
    
    var nameHeader = Label.createLabel("Player", nameX, yPos, 120, 30);
    Label.setLabelTextColor(nameHeader, "#FFFF00");
    window.addComponentToWindow(highScoresWindow, nameHeader);
    
    var scoreHeader = Label.createLabel("Score", scoreX, yPos, 80, 30);
    Label.setLabelTextColor(scoreHeader, "#FFFF00");
    window.addComponentToWindow(highScoresWindow, scoreHeader);
    
    var levelHeader = Label.createLabel("Level", levelX, yPos, 50, 30);
    Label.setLabelTextColor(levelHeader, "#FFFF00");
    window.addComponentToWindow(highScoresWindow, levelHeader);
    
    yPos = yPos + 30;
    
    ## Draw a separator line
    var separatorPane = Pane.createPane(50, yPos, 300, 1);
    Pane.setPaneColor(separatorPane, "#444444");
    window.addComponentToWindow(highScoresWindow, separatorPane);
    
    yPos = yPos + 10;
    
    for (var i = 0; i < maxToShow; i = i + 1) {
        var rank = i + 1;
        var name = entries[i][0];
        var score = entries[i][1];
        var level = entries[i][2];
        
        ## Add each column as a separate label with fixed position
        var rankLabel = Label.createLabel(rank + ".", rankX, yPos, 50, 30);
        Label.setLabelTextColor(rankLabel, "#FFFFFF");
        window.addComponentToWindow(highScoresWindow, rankLabel);
        
        var nameLabel = Label.createLabel(name, nameX, yPos, 120, 30);
        Label.setLabelTextColor(nameLabel, "#FFFFFF");
