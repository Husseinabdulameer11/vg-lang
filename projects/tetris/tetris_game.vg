## Save high score and restart game
function saveHighScoreAndRestart() {
    ## Get the player name from text field
    var playerName = TextField.getText(nameTextField);
    
    ## If name is empty, use "Anonymous"
    if (playerName == "") {
        playerName = "Anonymous";
    }
    
    ## Replace any commas in the name with spaces to avoid CSV parsing issues
    var sanitizedName = regex.replaceAll(playerName, ",", " ");
    
    ## Format the high score entry
    var currentTime = timestamp.currentTimeMillis();
    var highScoreEntry = sanitizedName + "," + score + "," + level + "," + currentTime + "\n";
    
    ## Append the score to the high score file
    try {
        ## Check if file exists first
        var existingData = File.readFile(highScoreFilePath);
        ## File exists, append to it
        File.appendToFile(highScoreFilePath, highScoreEntry);
    } catch (e) {
        ## File doesn't exist yet, create it with header
        File.writeFile(highScoreFilePath, "Player,Score,Level,Timestamp\n" + highScoreEntry);
    }
    
    ## Close the high score window
    window.dispose(highScoreWindow);
    
    ## Reset the game
    resetGame();
}

