        window.addComponentToWindow(highScoresWindow, scoreLabel);
        
        var levelLabel = Label.createLabel(level, levelX, yPos, 50, 30);
        Label.setLabelTextColor(levelLabel, "#FFFFFF");
        window.addComponentToWindow(highScoresWindow, levelLabel);
        
        yPos = yPos + 30;
    }
    
    ## Add back button
    var backButton = Button.createButton("Back", 150, 400, 100, 40);
    Button.setButtonColor(backButton, "#FFFFFF");
    IOEvents.setOnClick(backButton, &closeHighScoresWindow(highScoresWindow));
    window.addComponentToWindow(highScoresWindow, backButton);
    
    window.launch(highScoresWindow);
}

## Helper function to split string by newline character
function splitByNewline(text) {
    var lines = [];
    var currentLine = "";
    
    for (var i = 0; i < String.stringLength(text); i = i + 1) {
        var char = String.substring(text, i, i + 1);
        
        if (char == "\n") {
            ## End of line reached, add current line to lines array
            array.push(lines, currentLine);
            currentLine = "";
        } else {
            ## Add character to current line
            currentLine = currentLine + char;
        }
    }
    
    ## Add the last line if there's any text left
    if (currentLine != "") {
        array.push(lines, currentLine);
    }
    
    return lines;
}

## Helper function to parse a score line into fields
function parseScoreLine(line) {
    var fields = [];
    var parts = splitByComma(line);
    
    ## Only return valid entries (need at least name, score, level)
    if (array.getLength(parts) >= 3) {
        return parts;
    }
    
    ## Return empty array for invalid entries
    return [];
}

## Helper function to split string by comma
function splitByComma(text) {
    var fields = [];
    var currentField = "";
    
    for (var i = 0; i < String.stringLength(text); i = i + 1) {
        var char = String.substring(text, i, i + 1);
        
        if (char == ",") {
            ## End of field, add current field to fields array
            array.push(fields, currentField);
            currentField = "";
        } else {
            ## Add character to current field
            currentField = currentField + char;
        }
    }
    
    ## Add the last field if there's any text left
    if (currentField != "") {
        array.push(fields, currentField);
    }
    
    return fields;
}

